<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>

    <package name="staff" extends="json-default" namespace="/staff">
        <interceptors>
            <interceptor name="loginInterceptor" class="com.lanou3g.crm.staff.web.interceptor.LoginInterceptor">
                <param name="excludeMethods">login</param>
            </interceptor>
            <interceptor-stack name="myInterceptor">
                <interceptor-ref name="defaultStack"/>
                <interceptor-ref name="loginInterceptor"/>
            </interceptor-stack>
        </interceptors>
        <default-interceptor-ref name="myInterceptor"/>

        <!--登录-->
        <action name="staffAction_login" class="staffAction"
                method="login">
            <result name="success" type="chain">staffAction_home</result>
            <result name="input">/pages/login.jsp</result>
        </action>

        <!--查询全部员工-->
        <action name="staffAction_findAll" class="staffAction" method="findAllStaffs">
            <result name="success">/pages/staff/listStaff.jsp</result>
        </action>

        <!--添加员工-->
        <action name="staffAction_addStaff" class="staffAction" method="addStaff">
            <result name="success" type="redirectAction">staffAction_findAll</result>
            <result name="input">/pages/staff/addStaff.jsp</result>
        </action>

        <!---->
        <action name="staffAction_home" class="staffAction" method="home">
            <result name="home">/pages/frame.jsp</result>
        </action>


    </package>
</struts>